<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#454857">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="0.5"
            android:src="@drawable/cloud"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="#fff"
            android:id="@+id/E_Temp"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
           />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:textColor="#fff"
            android:id="@+id/E_Hum"
            android:gravity="left|center"
            android:textSize="@dimen/_12ssp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/E_num"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textColor="#fff"
            android:gravity="right|center"
            android:id="@+id/dateTime"
            android:textSize="@dimen/_12ssp"
            android:layout_gravity="right"
            android:layout_height="match_parent"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#495abf"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="T1"
                    android:textColor="#fff"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:id="@+id/F_Temp"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#495abf"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="T2"
                    android:textColor="#fff"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:id="@+id/Temp_2"
                    android:textStyle="bold"
                    android:textColor="#fff"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#495abf"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="T3"
                    android:textColor="#fff"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/Temp_3"
                    android:textColor="#fff"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textStyle="bold"
                android:id="@+id/F_Hum"
                android:textSize="@dimen/_15ssp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/Hum_2"
                android:textSize="@dimen/_15ssp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="left"
                android:id="@+id/Hum_3"
                android:textSize="@dimen/_15ssp"
                />


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Door Status: "
                android:textColor="#000"
                android:textSize="@dimen/_17ssp" />

            <TextView
                android:id="@+id/D_State"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#39d2c4"
                android:textSize="@dimen/_17ssp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center"
        android:gravity="center">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/shp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Compressor  Status: "
                android:textColor="#fff"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/R_Status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#39d2c4"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/shp"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Power Consumed: "
                android:textColor="#fff"
                android:textSize="@dimen/_10ssp" />
            <TextView
                android:id="@+id/power"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#39d2c4"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/temphistory"
        android:background="#ffab42"
        android:weightSum="3"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_height="@dimen/_80sdp">

        <ImageView
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/temp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Temperature History"
            android:textSize="@dimen/_15ssp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_gravity="right|center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/humdityhistory"
        android:background="#39d2c4"
        android:weightSum="3"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_height="@dimen/_80sdp">

        <ImageView
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_weight="0.9"
            android:background="@drawable/humidity" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Humidity History"
            android:textSize="@dimen/_15ssp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_weight="2"
            android:textColor="#fff"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_gravity="right|center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/statushistory"
        android:background="#507fdd"
        android:weightSum="3"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_height="@dimen/_80sdp">

        <ImageView
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:background="@drawable/status" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Status History"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_weight="2"
            android:layout_marginRight="@dimen/_15sdp"
            android:textColor="#fff"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_gravity="right|center"/>

    </LinearLayout>

    </LinearLayout>

</ScrollView>